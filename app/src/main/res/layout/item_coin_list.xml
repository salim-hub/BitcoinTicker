<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="coins"
            type="com.salim.bitcointicker.network.dto.coin.CoinItem"/>
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5"
        android:background="@color/list_bg">

        <TableRow>

            <TextView
                android:text="@{Integer.toString(coins.marketCapRank)}"
                android:layout_width="0dp"
                android:layout_weight="0.11"
                android:id="@+id/marketRank"
                tools:text="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/row_text_color"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.17"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_gravity="center">

                <ImageView
                    app:imageFromUrl="@{coins.image}"
                    android:id="@+id/coinImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_bitcoin"/>

                <TextView
                    android:text="@{coins.symbol}"
                    android:id="@+id/coinSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    tools:text="BTC"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <TextView
                app:price="@{coins.currentPrice}"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:id="@+id/coinPrice"
                tools:text="123.123"
                android:maxLines="1"
                android:maxLength="8"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/changingDirection"
                    android:src="@drawable/ic_arrow_down"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/changingRate"
                    tools:text="-1.0%"/>

            </LinearLayout>

            <TextView
                app:marketCap="@{coins.marketCap}"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                tools:text="$737,373,576,548"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="10dp"
                android:maxLines="1"
                android:maxLength="16"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>
        </TableRow>
    </TableLayout>
</layout>