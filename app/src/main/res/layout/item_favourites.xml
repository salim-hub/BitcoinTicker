<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="favouriteCoin"
            type="com.salim.bitcointicker.network.dto.favourites.FavouriteCoins"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/list_bg">

        <ImageView
            android:id="@+id/coinImageIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:imageFromUrl="@{favouriteCoin.coinImage}"
            android:src="@drawable/ic_bitcoin"/>

        <TextView
            android:id="@+id/coinNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bitcoin"
            android:text="@{favouriteCoin.coinSymbol}"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/coinPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{favouriteCoin.coinPrice}"
            tools:text="300,000.00"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="20dp" />

    </LinearLayout>
</layout>